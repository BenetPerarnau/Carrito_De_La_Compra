<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:onClick="ocultarTeclado"><!--Pongo en escuha el layout para que pulsando donde se pulse se llame al metodo ocultar teclado-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/producto1"
            />
        <EditText
            android:id="@+id/txtp1"
            android:layout_weight="0.85"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:inputType="number"
            android:gravity="right|center_vertical"
             />
        <TextView
            android:layout_weight="0.55"
            android:text="@string/unidades"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/txtp2"
            android:layout_weight="0.85"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:gravity="right|center_vertical"
            />
        <TextView
            android:text="€"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/activity_espaciado_filas">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/producto1"
            />
        <EditText
            android:id="@+id/txtp3"
            android:layout_weight="0.85"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:inputType="number"
            android:gravity="right|center_vertical"
            />
        <TextView
            android:layout_weight="0.55"
            android:text="@string/unidades"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/txtp4"
            android:layout_weight="0.85"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:gravity="right|center_vertical"
            />
        <TextView
            android:text="€"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/activity_espaciado_filas">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@android:color/holo_blue_dark"
            android:text="Importe:"
            android:gravity="left|center_vertical"
            />
        <TextView
            android:id="@+id/txtResult"
            android:layout_weight="0.6"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@android:color/holo_blue_dark"
            android:text="€"
            android:gravity="right|center_vertical"
            />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/activity_espaciado_filas">
        <Button
            android:id="@+id/btnCancel"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/btnCancelar"
            android:onClick="resetear"
            />
        <Button
            android:id="@+id/btnConfirmar"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/btnConfirmar"
            android:onClick="calcular"
            />

        </LinearLayout>


</LinearLayout>
